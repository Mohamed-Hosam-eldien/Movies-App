<resources>
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>


    <style name="progressBarColor" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="ratingColor" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/yellow</item>
    </style>

</resources>